<h1><%= @doctor.name %></h1>
<table>
  <tr>
    <th>Appointment</th>
    <th>Patient</th>
  </tr>
  <% @doctor.appointments.each do |a| %>
    <tr>
      <td><%=a.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></td>
      <td><%= link_to a.patient.name, patient_path(a.patient_id) %></td>
    </tr>
  <% end %>
</table>