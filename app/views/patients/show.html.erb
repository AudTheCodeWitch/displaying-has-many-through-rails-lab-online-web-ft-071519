<h1><%= @patient.name %></h1>
<table>
  <tr>
    <th>Appointment</th>
    <th>Doctor</th>
  </tr>
  <% @patient.appointments.each do |a| %>
    <tr>
      <td><%=a.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></td>
      <td><%= link_to a.doctor.name, doctor_path(a.doctor_id) %></td>
    </tr>
  <% end %>
</table>